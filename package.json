{
  "name": "hyperhttp",
  "version": "1.0.0",
  "description": "ðŸš€ The Modern HTTP Client for Every Platform - Fetch-first, plugin-based, and more powerful than Axios. Solves CORS+cookie issues, works in Edge runtimes, and provides production-ready resilience.",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "publish:packages": "pnpm -r publish --access public",
    "publish:dry-run": "pnpm -r publish --access public --dry-run",
    "publish:all": "./scripts/publish.sh",
    "publish:core": "cd packages/core && npm publish",
    "publish:plugins": "cd packages/plugins && npm publish",
    "publish:presets": "cd packages/presets && npm publish",
    "publish:axios-adapter": "cd packages/axios-adapter && npm publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@8.12.0",
  "keywords": [
    "http",
    "client",
    "fetch",
    "axios",
    "retry",
    "timeout",
    "cache",
    "rate-limit",
    "circuit-breaker",
    "dedupe",
    "metrics",
    "plugin",
    "middleware",
    "node",
    "edge",
    "deno",
    "bun",
    "browser",
    "cors",
    "cookies",
    "ssrf",
    "security",
    "microservices",
    "api-gateway",
    "resilience",
    "fault-tolerance",
    "performance",
    "typescript",
    "esm",
    "tree-shaking",
    "modern",
    "platform-agnostic"
  ]
}
